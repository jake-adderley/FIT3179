{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 750,
  "height": 550,
  "title": "Tropical storms",
  "projection": {"type": "mercator", "center":[134,-30],"scale":500},
  "params": [
    { "name": "yearSelect", "value": 2022,
      "bind": {"element": "#t_slider"} }
  ],
  "layer":[
    {
      "data": {
        "url": "https://raw.githubusercontent.com/JiazhouLiu/FIT3179/main/VegaLite/2_symbol_map/js/ne_110m_admin_0_countries.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
        },
    "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "black"}
        },
    {
      "data": {
        "url": "data/IDCKMSTM0S_clean.csv"
      },
      "transform": [{"filter":"year(datum.TM) == yearSelect"}],
      "mark": {"type": "circle"},
      "encoding": {
        "longitude": {"field": "LON", "type": "quantitative"},
        "latitude": {"field": "LAT", "type": "quantitative"},
        "size": {
          "field": "SURFACE_CODE",
          "type": "quantitative",
          "title": "Surface code",
          "scale": {"domain": [1, 5]}
        },
        "color": {
          "field": "NAME",
          "type": "nominal",
          "title": "Storm Name"
        },
        "tooltip": [
          {"field": "NAME", "type":"nominal", "title":"Name"},
          {"field": "SURFACE_CODE", "type":"quantitative", "title":"Category"},
          {"field": "TM", "type":"temporal", "title":"Date"}]
      }
    }
  ]
}
